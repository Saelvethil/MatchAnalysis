<!DOCTYPE html>
<html ng-app="Client" ng-controller="BaseController">
<head>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.2.0/css/bootstrap.min.css">
    @Styles.Render("~/Content/css")
    <title ng-bind="models.helloAngular"></title>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" ng-click="navbarProperties.isCollapsed = !navbarProperties.isCollapsed">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Match Analysis Site</a>
            </div>
            <div class="navbar-collapse collapse" collapse="navbarProperties.isCollapsed">
                <ul class="nav navbar-nav">
                    <li><a href="/#/competitions">Leagues</a></li>
                    <li><a href="/#/fixturesSearch">Fixture Search</a></li>
                    <li><a href="/#/ranking">Ranking</a></li>
                    
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/#/adminpanel" ng-show="SessionService.isAdmin">Admin Panel</a></li>
                    @*<li><a href="/#/account" ng-show="SessionService.isLoggedIn">Account</a></li>*@
                    <li><a href="/#/login" ng-show="!SessionService.isLoggedIn">Login</a></li>
                    <li><a href="/#/register" ng-show="!SessionService.isLoggedIn">Register</a></li>
                    <li><a href="" ng-show="SessionService.isLoggedIn" ng-click="logout()">Logout</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container mainContent">
        <div ng-view></div>
    </div>


    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.20/angular.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.20/angular-route.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.0/angular-cookies.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.10.0/ui-bootstrap-tpls.min.js"></script>
    @Scripts.Render("~/bundles/Client")
</body>
</html>